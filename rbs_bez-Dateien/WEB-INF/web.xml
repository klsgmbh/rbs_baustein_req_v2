<?xml version="1.0" encoding="utf-8"?>
<web-app>
   <display-name>cit Assistants Demo</display-name>
   <context-param>
      <param-name>de.cit.assistants.language</param-name>
      <param-value>de</param-value>
   </context-param>
   <context-param>
      <param-name>de.cit.assistants.enable-file-metadata</param-name>
      <param-value>true</param-value>
   </context-param>
   <context-param>
      <param-name>webapp.field-help.file</param-name>
      <param-value>/res/static/control/field-help.htm</param-value>
   </context-param>
   <context-param>
      <param-name>webapp.mode</param-name>
      <param-value>offline</param-value>
   </context-param>
   <context-param>
      <param-name>de.cit.assistants.service-url</param-name>
      <param-value>${de.cit.assistants.service-url:-mailto:webmaster@localhost}</param-value>
   </context-param>
   <context-param>
      <param-name>de.cit.assistants.service-name</param-name>
      <param-value>${de.cit.assistants.service-name:-Website-Administration}</param-value>
   </context-param>
   <context-param>
      <param-name>de.cit.assistants.html-mode</param-name>
      <param-value>html5</param-value>
   </context-param>
   <context-param>
      <param-name>de.cit.intelliform.server.min-version</param-name>
      <param-value>2015.60,2019.12</param-value>
   </context-param>
   <filter>
      <filter-name>XHtmlContentTypeFilter</filter-name>
      <display-name>XHtmlContentTypeFilter</display-name>
      <description>no description</description>
      <filter-class>de.cit.util.javax.servlet.jsp.XHtmlContentTypeFilter</filter-class>
   </filter>
   <filter>
      <filter-name>ValidationFilter</filter-name>
      <display-name>ValidationFilter</display-name>
      <description>no description</description>
      <filter-class>de.cit.util.javax.servlet.ValidationFilter</filter-class>
   </filter>
   <filter>
      <filter-name>I18NFilter</filter-name>
      <filter-class>de.cit.assistants.filters.I18NFilter</filter-class>
   </filter>
   <filter-mapping>
      <filter-name>XHtmlContentTypeFilter</filter-name>
      <url-pattern>/*</url-pattern>
   </filter-mapping>
   <filter-mapping>
      <filter-name>ValidationFilter</filter-name>
      <url-pattern>/*</url-pattern>
   </filter-mapping>
   <filter-mapping>
      <filter-name>I18NFilter</filter-name>
      <url-pattern>*.jsp</url-pattern>
      <dispatcher>FORWARD</dispatcher>
   </filter-mapping>
   <filter-mapping>
      <filter-name>I18NFilter</filter-name>
      <url-pattern>/help.jsp</url-pattern>
      <dispatcher>REQUEST</dispatcher>
   </filter-mapping>
   <servlet>
      <servlet-name>DispatchServlet</servlet-name>
      <display-name>Dispatch Servlet</display-name>
      <description>JSP Page control</description>
      <servlet-class>de.cit.jsp.control.DispatchServlet</servlet-class>
   </servlet>
   <servlet>
      <servlet-name>PersistanceServlet</servlet-name>
      <display-name>Save and Restore Servlet</display-name>
      <servlet-class>de.cit.jsp.persistance.PersistanceServlet</servlet-class>
   </servlet>
   <servlet>
      <servlet-name>DataServlet</servlet-name>
      <display-name>Data Servlet</display-name>
      <description/>
      <servlet-class>de.cit.jsp.data.DataServlet</servlet-class>
   </servlet>
   <servlet>
      <servlet-name>ResourceServlet</servlet-name>
      <display-name>Resource Servlet</display-name>
      <description/>
      <servlet-class>de.cit.assistants.servlets.ResourceServlet</servlet-class>
   </servlet>
   <servlet>
      <servlet-name>ErrorServlet</servlet-name>
      <display-name>Error Servlet</display-name>
      <description/>
      <servlet-class>de.cit.assistants.servlets.ErrorServlet</servlet-class>
   </servlet>
   <servlet>
      <servlet-name>de.cit.assistants.servlets.AdminServlet</servlet-name>
      <display-name>Admin Servlet</display-name>
      <description/>
      <servlet-class>de.cit.assistants.servlets.AdminServlet</servlet-class>
   </servlet>
   <servlet-mapping>
      <servlet-name>DataServlet</servlet-name>
      <url-pattern>/data</url-pattern>
   </servlet-mapping>
   <servlet-mapping>
      <servlet-name>PersistanceServlet</servlet-name>
      <url-pattern>/save-and-restore</url-pattern>
   </servlet-mapping>
   <servlet-mapping>
      <servlet-name>DispatchServlet</servlet-name>
      <url-pattern>/dialog</url-pattern>
   </servlet-mapping>
   <servlet-mapping>
      <servlet-name>ResourceServlet</servlet-name>
      <url-pattern>/res/*</url-pattern>
   </servlet-mapping>
   <servlet-mapping>
      <servlet-name>ErrorServlet</servlet-name>
      <url-pattern>/error</url-pattern>
   </servlet-mapping>
   <servlet-mapping>
      <servlet-name>de.cit.assistants.servlets.AdminServlet</servlet-name>
      <url-pattern>/admin/shutdown</url-pattern>
   </servlet-mapping>
   <welcome-file-list>
      <welcome-file>dialog</welcome-file>
   </welcome-file-list>
   <taglib>
      <taglib-uri>http://www.cit.de/ns/jsp</taglib-uri>
      <taglib-location>/WEB-INF/assistants.tld</taglib-location>
   </taglib>
   <taglib>
      <taglib-uri>http://www.cit.de/ns/jsp/template</taglib-uri>
      <taglib-location>/WEB-INF/assistants.tld</taglib-location>
   </taglib>
   <security-constraint>
      <web-resource-collection>
         <web-resource-name>intelliForm Administration</web-resource-name>
         <url-pattern>/admin/*</url-pattern>
         <http-method>GET</http-method>
         <http-method>POST</http-method>
      </web-resource-collection>
      <auth-constraint>
         <role-name>intelliform-admin</role-name>
      </auth-constraint>
      <user-data-constraint>
         <transport-guarantee>NONE</transport-guarantee>
      </user-data-constraint>
   </security-constraint>
   <login-config>
      <auth-method>BASIC</auth-method>
      <realm-name>intelliForm Administration</realm-name>
   </login-config>
   <security-role>
      <role-name>intelliform-admin</role-name>
   </security-role>
</web-app>